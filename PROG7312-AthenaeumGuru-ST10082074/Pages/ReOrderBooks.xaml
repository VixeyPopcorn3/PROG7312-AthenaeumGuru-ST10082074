                    <ImageBrush ImageSource="/Resources/Right Arrow.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="LeftBtn" Content="Move Left" HorizontalAlignment="Left" Margin="328,67,0,0" VerticalAlignment="Top" FontSize="24" Height="145" Width="223" BorderBrush="{x:Null}" FontFamily="Elephant" Foreground="White" RenderTransformOrigin="0.5,0.5" Click="LeftBtn_Click">
