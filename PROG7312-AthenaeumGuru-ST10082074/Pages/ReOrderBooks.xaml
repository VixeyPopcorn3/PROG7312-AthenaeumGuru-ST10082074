            <Button x:Name="RightBtn" Content="Move Right" HorizontalAlignment="Left" Margin="637,68,0,0" VerticalAlignment="Top" FontSize="24" Height="145" Width="223" BorderBrush="{x:Null}" FontFamily="Elephant" Foreground="White" Click="RightBtn_Click">
