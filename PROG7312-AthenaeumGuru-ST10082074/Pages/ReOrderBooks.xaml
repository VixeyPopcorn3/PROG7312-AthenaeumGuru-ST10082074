<Window x:Class="PROG7312_AthenaeumGuru_ST10082074.Pages.ReOrderBooks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROG7312_AthenaeumGuru_ST10082074.Pages"
        mc:Ignorable="d"
        Title="ReOrderBooks" Height="800" Width="1200" ResizeMode="NoResize">
    <Window.WindowStartupLocation>CenterScreen</Window.WindowStartupLocation>
    <StackPanel>
        <StackPanel.Background>
            <ImageBrush ImageSource="/Resources/BackGround (2).jpg"/>
        </StackPanel.Background>
        <Canvas Height="170">
            <Button x:Name="HelpBtn" Content="H" Canvas.Right="120" Canvas.Top="3" FontSize="48" Width="85" BorderBrush="{x:Null}" FontFamily="Engravers MT" Height="80" Foreground="Black" IsEnabled="False" Visibility="Hidden" >
                <Button.Background>
                    <ImageBrush ImageSource="/Resources/HelpBtn.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>
            <Button x:Name="ReturnBtn" Content="" Canvas.Left="100" Canvas.Top="3" BorderBrush="{x:Null}" Height="80" Width="85" Click="ReturnBtn_Click" >
                <Button.Background>
                    <ImageBrush ImageSource="/Resources/LeftBtn.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>
            <Label x:Name="Scorelbl" Content="Score: " Canvas.Left="244" Canvas.Top="26" FontFamily="Bookman Old Style" FontSize="36" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" Width="251"/>
